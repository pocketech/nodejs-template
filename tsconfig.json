{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "CommonJS",
    "target": "es2022",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true
  },
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
